var listaDePecas = ["Amortecedor", "Motor", "Filtro de Ar"]

let peso = 101
if (peso < 100){
    console.log("A peça deve pesar no mínimo 100 gramas");
}else{
    console.log("A peça possui o peso adequado");
}

if (listaDePecas.length < 10){ // .lenght é para qtdade
    console.log("Ainda tem espaço");
}else{
    console.log("Não há mais espaço");
}

let nomePeca = "Disco de Freio";
if (nomePeca.length > 3){
    console.log("Nome da peça está adequado");
}else if (nomePeca.length == 0){
    console.log("O nome da peça não pode ser vazio")
}else{
    console.log("O nome da peça precisa ter no mínimo 3 caracteres");

}
